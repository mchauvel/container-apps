{
  "api_version": "v1",
  "title": "Configuration PHP 7.1 / Apache / MariaDB 10.2",
  "wizard": [
    {
      "title": "Configuration APACHE",
      "schema": {
        "http_port": {
          "type": "integer",
          "title": "HTTP Port",
          "description": "Apache HTTP Port",
		  "required": true,
          "maximum": 65535
        },
        "https_port": {
          "type": "integer",
          "title": "HTTPS Port",
          "description": "Apache HTTPS Port",
		  "required": true,
          "maximum": 65535
        }
      },
      "form": [
        "*"
      ]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml",
    "data": {
      "http_port": [
        "web.ports[0]",
        "web.environment.HTTP_PORT"
      ],
      "https_port": [
      	"web.ports[1]",
        "web.environment.HTTPS_PORT"
      ]
    }
  }
}
