{
  "api_version": "v1",
  "title": "Configuration PHP 7.1 / Apache / MariaDB 10.2",
  "wizard": [
    {
      "title": "Configuration APACHE",
      "schema": {
        "php_image": {
          "type": "string",
          "title": "PHP Version",
          "description": "Patched version with pdo_mysql added",
          "default": "mchauvel/php-pdo-mysql:7.1-apache",
		  "enum": [
            "mchauvel/php-pdo-mysql:7.1-apache",
            "mchauvel/php-pdo-mysql:7.0-apache"
          ],
          "required": true
        },
        "http_port": {
          "type": "integer",
          "title": "HTTP Port",
          "description": "Apache HTTP Port",
		  "required": true,
          "maximum": 65535
        },
        "https_port": {
          "type": "integer",
          "title": "HTTPS Port",
          "description": "Apache HTTPS Port",
		  "required": true,
          "maximum": 65535
        }
      },
      "form": [
        {
          "key": "php_image",
          "type": "select",
          "titleMap": [
          	{
          	  "name": "PHP 7.1",
          	  "value": "mchauvel/php-pdo-mysql:7.1-apache"
          	},
            {
          	  "name": "PHP 7.0",
          	  "value": "mchauvel/php-pdo-mysql:7.0-apache"
          	}
          ]
        },
        {
          "key": "http_port"
        },
        {
         "key": "https_port"
        }
      ]
    },
    {
      "title": "Configuration MariaDB",
      "schema": {
        "mysql_port": {
          "type": "integer",
          "title": "MariaDB Port",
		  "required": true,
          "maximum": 65535
        },
        "mysql_user": {
          "type": "string",
          "title": "MYSQL_USER",
		  "required": true
        }
      },
      "form": [
        "*"
      ]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml",
    "data": {
      "php_image": "web.image",
      "http_port": [
        "web.ports[0]",
        "web.environment.HTTP_PORT"
      ],
      "https_port": [
      	"web.ports[1]",
        "web.environment.HTTPS_PORT"
      ],
      "mysql_port": "db.ports[0]",
      "mysql_user": "db.environment.MYSQL_USER"
    }
  }
}
